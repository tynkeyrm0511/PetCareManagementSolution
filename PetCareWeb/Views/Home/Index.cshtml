@model IEnumerable<PetCareWeb.Models.DichVu>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Chào mừng đến với PetCareWeb</h1>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning" role="alert">
        @TempData["Message"]
    </div>
}
@if (TempData["LogoutMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["LogoutMessage"]
    </div>
}

<p>Dưới đây là danh sách các dịch vụ hiện đang có:</p>

<div class="services-grid">
    @foreach (var dichVu in Model)
    {
        <div class="service-item">
            <img src="data:image/jpeg;base64,@dichVu.HinhAnhBase64" alt="@dichVu.TenDichVu" class="service-image" />
            <h2>@dichVu.TenDichVu</h2>
            <p>@dichVu.MoTa</p>
            <p><strong>Giá:</strong> @dichVu.Gia VND</p>
            <div class="service-footer">
                <form asp-controller="Account" asp-action="CreateAppointment" method="get">
                    <input type="hidden" name="dichVuId" value="@dichVu.MaDichVu" />
                    <button type="submit" class="btn btn-primary">ĐẶT LỊCH HẸN</button>
                </form>
            </div>
        </div>
    }
</div>
