                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <button class="nav-link-button text-white" onclick="location.href='@Url.Action("Index", "Home")'">Trang chủ</button>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <button class="nav-link-button text-white" onclick="location.href='@Url.Action("Profile", "Account")'">Tài khoản</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link-button text-white" onclick="location.href='@Url.Action("Logout", "Account")'">Đăng xuất</button>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <button class="nav-link-button text-white" onclick="location.href='@Url.Action("Login", "Account")'">Đăng nhập</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link-button text-white" onclick="location.href='@Url.Action("Register", "Account")'">Đăng ký</button>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2025 - PetCareWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
